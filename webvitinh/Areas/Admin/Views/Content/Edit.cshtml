                @Html.TextBoxFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" }, id = "txtContent" })
                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group row">
        <label asp-for="MetaDescription" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="MetaDescription" class="form-control" id="txtcontent">
            <span asp-validation-for="MetaDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Status" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Status" class="form-control" id="txtcontent">
            <span asp-validation-for="MetaDescription" class="text-danger"></span>
        </div>
    </div>


    @*  asp-for tag helper is set to "Photo" property. "Photo" property type is IFormFile
        so at runtime asp.net core generates file upload control (input type=file)
    *@
    <div class="form-group row">
        <label asp-for="Tags" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Tags" class="form-control" id="txtcontent">
            <span asp-validation-for="Tags" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </div>
</form>
