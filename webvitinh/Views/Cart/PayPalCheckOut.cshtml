@model List<webvitinh.Models.CartItem>
@{
    ViewBag.Title = "Payment Paypal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
        <form action="https://www.sandbox.paypal.com/cgi-bin/webscr">
            <input type="hidden" name="cmd" value="_cart" />
            <input type="hidden" name="upload" value="1" />
            <input type="hidden" name="return" value="http://localhost:44371/get-paypal" />
            <input type="hidden" name="business" value="tonynetn142@gmail.com" />
            @for (int i = 0; i < Model.Count; i++)
            {
            <input type="hidden" name="@Url.Content("item_name_"+(i+1))" value="@Model[i].Product.Name" />
            <input type="hidden" name="@Url.Content("item_number_"+(i+1))" value="@Model[i].Product.Id" />
            <input type="hidden" name="@Url.Content("amount_"+(i+1))" value="@(Model[i].Product.Price/22500)" />
            <input type="hidden" name="@Url.Content("quantity_" + (i + 1))" value="@Model[i].Quantity" />
            }
            <br />
            <div class="col-md-12">
                <input type="submit" value="Checkout Now" class="btn btn-primary col-md-12" />
            </div>
        </form>
</div>

